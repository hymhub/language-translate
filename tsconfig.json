{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "lib": ["ES2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./dist/",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "bin", "/test/**/*"]
}
